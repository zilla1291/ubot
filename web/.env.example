# Unfiltered Bytzz - Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=production
PORT=3001
HOST=localhost

# ==========================================
# Admin Configuration
# ==========================================
# Generate with: openssl rand -hex 32
ADMIN_KEY=your-secret-admin-key-here

# ==========================================
# Database Configuration
# ==========================================
DATABASE_PATH=/var/lib/unfiltered-bytzz
DATABASE_NAME=bot_platform.db

# ==========================================
# Logging Configuration
# ==========================================
LOG_PATH=/var/log/unfiltered-bytzz
LOG_LEVEL=info

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN=netivosolutions.top
HTTPS_ENABLED=true

# ==========================================
# JWT Configuration (Future)
# ==========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d

# ==========================================
# API Configuration
# ==========================================
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# ==========================================
# WhatsApp Configuration
# ==========================================
WHATSAPP_PAIRING_TIMEOUT=300
WHATSAPP_SESSION_TIMEOUT=3600
WHATSAPP_AUTO_RECONNECT=true

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@netivosolutions.top

# ==========================================
# Payment Configuration (Optional)
# ==========================================
PAYMENT_ENABLED=false
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==========================================
# Bot Configuration
# ==========================================
BOT_NAME=Unfiltered Bytzz
BOT_OWNER=Glen Zilla
BOT_OWNER_NUMBER=
THEME_EMOJI=â€¢

# ==========================================
# Feature Toggles
# ==========================================
FEATURE_AI_ENABLED=true
FEATURE_MEDIA_PROCESSING=true
FEATURE_GROUP_MANAGEMENT=true
FEATURE_MUSIC_DOWNLOAD=true
FEATURE_STICKER_MAKER=true

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# ==========================================
# Monitoring & Analytics (Optional)
# ==========================================
SENTRY_DSN=
ANALYTICS_ENABLED=false

# ==========================================
# Third-party API Keys
# ==========================================
# Add your API keys for various services
XTEAM_API_KEY=
LOLHUMAN_API_KEY=
NEOXR_API_KEY=

# ==========================================
# Proxy Configuration (If needed)
# ==========================================
PROXY_ENABLED=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# ==========================================
# Development Configuration
# ==========================================
DEBUG_MODE=false
CONSOLE_LOG_FORMAT=colorized
